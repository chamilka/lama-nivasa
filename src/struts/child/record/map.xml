<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="childRecord" namespace="/childRecord" extends="web-default">

		<action name="list" class="pdn.sci.cs.action.ChildRecordAction" method="list">
			<result name="success">/WEB-INF/content/child/record/list.jsp</result>
		</action>

		<action name="frame" class="pdn.sci.cs.action.ChildRecordAction" method="frame">
			<result name="success">/WEB-INF/content/child/record/frame.jsp</result>
		</action>

		<action name="search-form" class="pdn.sci.cs.action.ChildRecordAction" method="searchForm">
			<result name="success">/WEB-INF/content/child/record/search.jsp</result>
		</action>

		<action name="search" class="pdn.sci.cs.action.ChildRecordAction" method="search">
			<result name="success">/WEB-INF/content/child/record/list.jsp</result>
		</action>

		<action name="add" class="pdn.sci.cs.action.ChildRecordAction" method="add">
			<result name="success">/WEB-INF/content/child/record/add.jsp</result>
		</action>

		<action name="edit" class="pdn.sci.cs.action.ChildRecordAction" method="edit">
			<result name="success">/WEB-INF/content/child/record/add.jsp</result>
		</action>

		<action name="view" class="pdn.sci.cs.action.ChildRecordAction" method="view">
			<result name="success">/WEB-INF/content/child/record/view.jsp</result>
		</action>

		<action name="delete" class="pdn.sci.cs.action.ChildRecordAction" method="delete">
			<result name="success">/WEB-INF/content/child/record/list.jsp</result>
		</action>

		<action name="save" class="pdn.sci.cs.action.ChildRecordAction" method="save">
			<result name="success">/WEB-INF/content/child/record/view.jsp</result>
			<result name="input">/WEB-INF/content/child/record/add.jsp</result>
		</action>

	</package>
</struts>