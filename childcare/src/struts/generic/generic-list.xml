<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="genericList" namespace="/genericList" extends="pgis-default">
	
		<action name="view" class="pdn.sci.cs.action.GenericListAction" method="view">
			<result name="success">/WEB-INF/content/settings/generic/list/view.jsp</result>
		</action>
		
		<action name="list" class="pdn.sci.cs.action.GenericListAction" method="list">
			<result name="success">/WEB-INF/content/settings/generic/list/list.jsp</result>
		</action>
		
		<action name="add" class="pdn.sci.cs.action.GenericListAction" method="add">
			<result name="success">/WEB-INF/content/settings/generic/list/add.jsp</result>
		</action>
		
		<action name="save" class="pdn.sci.cs.action.GenericListAction" method="save">
			<result name="success">/WEB-INF/content/settings/generic/list/view.jsp</result>
			<result name="input">/WEB-INF/content/settings/generic/list/add.jsp</result>
		</action>
		
		<action name="edit" class="pdn.sci.cs.action.GenericListAction" method="edit">
			<result name="success">/WEB-INF/content/settings/generic/list/add.jsp</result>
		</action>
		
		<action name="delete" class="pdn.sci.cs.action.GenericListAction" method="delete">
			<result name="success">/WEB-INF/content/settings/generic/list/list.jsp</result>
		</action>

	</package>
</struts>