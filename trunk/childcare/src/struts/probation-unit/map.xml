<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="probationUnit" namespace="/probationUnit" extends="web-default">
	
		<action name="list" class="pdn.sci.cs.action.ProbationUnitAction" method="list">
			<result name="success">/WEB-INF/content/probation-unit/list.jsp</result>
		</action>
		
		<action name="search" class="pdn.sci.cs.action.ProbationUnitAction" method="search">
			<result name="success">/WEB-INF/content/probation-unit/list.jsp</result>
		</action>

		<action name="frame" class="pdn.sci.cs.action.ProbationUnitAction" method="list">
			<result name="success">/WEB-INF/content/probation-unit/frame.jsp</result>
		</action>
		
		<action name="search-form" class="pdn.sci.cs.action.ProbationUnitAction" method="searchForm">
			<result name="success">/WEB-INF/content/probation-unit/search.jsp</result>
		</action>
		
		<action name="add" class="pdn.sci.cs.action.ProbationUnitAction" method="add">
			<result name="success">/WEB-INF/content/probation-unit/add.jsp</result>
		</action>
		
		<action name="view" class="pdn.sci.cs.action.ProbationUnitAction" method="view">
			<result name="success">/WEB-INF/content/probation-unit/view.jsp</result>
		</action>
		
		<action name="edit" class="pdn.sci.cs.action.ProbationUnitAction" method="edit">
			<result name="success">/WEB-INF/content/probation-unit/add.jsp</result>
		</action>
		
		<action name="delete" class="pdn.sci.cs.action.ProbationUnitAction" method="delete">
			<result name="success">/WEB-INF/content/probation-unit/list.jsp</result>
		</action>
		
		<action name="save" class="pdn.sci.cs.action.ProbationUnitAction" method="save">
			<result name="success">/WEB-INF/content/probation-unit/view.jsp</result>
			<result name="input">/WEB-INF/content/probation-unit/add.jsp</result>
		</action>
		
		<action name="officers" class="pdn.sci.cs.action.ProbationUnitAction" method="probationOfficerList">
			<result name="success">/WEB-INF/content/probation-unit/officer-list.jsp</result>
		</action>
		
		
	</package>
</struts>